@model IEnumerable<OpenMatViewModel>

@{
    ViewData["Title"] = "List of Open Mats in Europe";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
