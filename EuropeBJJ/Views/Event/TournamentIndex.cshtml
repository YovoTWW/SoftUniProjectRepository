@model IEnumerable<TournamentViewModel>

@{
    ViewData["Title"] = "List of Tournaments in Europe";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    @if (User?.Identity?.IsAuthenticated == true )
    {
        <a asp-controller="Event" asp-action="AddSeminar" class="btn btn-primary"><i class="fas fa-plus"></i>Add Tournament</a>
    }
</div>
<hr />

<div class="row text-center">
    @foreach (var tournament in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100" style="width: 100%;">
                @if (!string.IsNullOrEmpty(tournament.Image))
                {
                    <img src="@tournament.Image" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="@tournament.Name">
                }
                else
                {
                    <img src="~/img/no-image-available-02.jpg" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="No Image Available">
                }

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@tournament.Name</h5>
                    <p class="card-text">Location: @tournament.City , @tournament.Country</p>
                    <p class="card-text">Link: @tournament.Link</p>
                    @* <div class="d-flex justify-content-between mt-auto">
                        @if (User?.Identity?.IsAuthenticated == true && !tournament.IsSeller && !tournament.HasBought)
                        {
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@tournament.Id" class="btn btn-info me-2 w-50">Details</a>
                            <form asp-controller="Product" asp-action="AddToCart" method="post" class="w-50">
                                <input type="hidden" name="id" value="@tournament.Id" />
                                <button type="submit" class="btn btn-success w-100">Buy</button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@tournament.Id" class="btn btn-info w-100">Details</a>
                        }
                    </div> *@
                </div>
            </div>
        </div>
    }
</div>
