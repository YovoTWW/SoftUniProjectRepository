@using EuropeBJJ.Models.Event;
@model IEnumerable<AttendeeProfileViewModel>

@{
    ViewData["Title"] = "Attendees";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div style="display: flex; flex-direction: column; gap: 20px; margin-top: 20px;">
    @foreach (var Profile in Model)
    {
        <div style="display: flex; align-items: center; border: 2px solid black; padding: 20px; width: 400px;">
            <!-- Profile Picture -->
            <div style="flex-shrink: 0; width: 100px; height: 100px; border: 2px solid black; text-align: center; line-height: 100px;">
                @if (!string.IsNullOrEmpty(Profile.Picture))
                {
                    <img src="@Profile.Picture" class="img-fluid" style="max-width: 100%; height: auto;"  />
                }
                else
                {
                    <img src="~/img/blank-profile-picture.jpg" class="img-fluid" style="max-width: 100%; height: auto;" alt="No Image Available" />
                }
            </div>

            <!-- Profile Details -->
            <div style="margin-left: 20px; flex-grow: 1;">
                <h3 style="margin: 0;">@Profile.FullName</h3>
                <a asp-controller="Profile" asp-action="Details" asp-route-id="@Profile.ProfileId" class="btn btn-info me-2 w-50"><i class="bi bi-card-text"></i>Details</a>
            </div>
        </div>
    }
</div>

